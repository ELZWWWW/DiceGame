
{
  "name": "diceforge",
  "version": "1.0.0",
  "description": "Idle dice game with save/load, prestige, stats, achievements, and modern shop",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.diceforge.app",
    "productName": "Diceforge",
    "copyright": "Copyright Â© 2025",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "your-github-username",
        "repo": "diceforge"
      }
    ]
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.0",
    "electron-updater": "^6.3.2"
  }
}
